<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Option</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image(40, 40), class:"attachment user profile-image fallback" %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td>
            <% book.tags.each do |tag| %>
              <li style="list-style: none;"><%= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %></li>
            <% end %>
          </td>
          <td><%= render "books/static_rate", book: book %></td>
        </tr>
        <% end %>
      </tbody>
  </table>