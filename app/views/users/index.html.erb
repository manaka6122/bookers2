<div class="container px-5 px-sm-0">
   <div class="error_explanation">
      <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
    </div>
  <div class="row">
  <%= render 'books/list', user: @user, book: @book %>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image(40, 40), class:"attachment user profile_image fallback" %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>